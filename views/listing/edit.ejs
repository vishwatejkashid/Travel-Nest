<% layout("/layouts/boilerplate") -%>

  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Edit the Place</h2>
      <form method="post" action="/listing/<%= lists._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
            <input value="<%=lists.title %>" name="list[title]" type="text" class="form-control" required/>
            <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Title cannot be empty</div>
        </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="list[description]" class="form-control" required><%=lists.description%></textarea>
            <div class="valid-feedback">Valid Description</div>
          <div class="invalid-feedback">Description cannot be empty</div>
          </div>

          <div class=" row mb-3" >
            <label for="img" class="form-label">Original Image</label>
            <div class="mb-3 col-3">
              <img class="img-thumbnail" src="<%= lists.img.url %> "/>
            </div>

            <div class="mt-5 mb-3 col-9 ">
              <label for="img" class="form-label">Upload New Image</label>
              <input value="<%=lists.img.url %>" name="list[img]" type="file" class="form-control" />
              <div class="valid-feedback">Valid image url</div>
              <div class="invalid-feedback">Image url cannot be empty</div>
              </div>
          </div>

          <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input value="<%=lists.price %>" name="list[price]" type="text" class="form-control" required/>
            <div class="valid-feedback">Valid Price</div>
                <div class="invalid-feedback">Price cannot be empty</div>
          </div>
          
          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input value="<%=lists.location %>" name="list[location]" type="text" class="form-control" required/>
            <div class="valid-feedback">Valid Location</div>
            <div class="invalid-feedback">Location cannot be empty</div>
          </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input value="<%=lists.country %>" name="list[country]" type="text" class="form-control" required/>
            <div class="valid-feedback">Valid Country</div>
            <div class="invalid-feedback">Country cannot be empty</div>
          </div>
          <div class="row">
            <div class="col-md-4">
                <label for="type" class="form-label">Category</label>
                <select name="list[type]" class="form-control" required>
                    <option value="">Select a category</option>
                    <option value="Amazingpools" <%= lists.type === "Amazingpools" ? "selected" : "" %>>Amazing Pools</option>
                    <option value="Arctic" <%= lists.type === "Arctic" ? "selected" : "" %>>Arctic</option>
                    <option value="Hillstations" <%= lists.type === "Hillstations" ? "selected" : "" %>>Hillstations</option>
                    <option value="Mansion" <%= lists.type === "Mansion" ? "selected" : "" %>>Mansion</option>
                    <option value="Islands" <%= lists.type === "Islands" ? "selected" : "" %>>Islands</option>
                    <!-- Add more options as needed -->
                </select>
                <div class="invalid-feedback">required</div>
            </div>
        </div>
        <button class="btn col-1 btn-dark edit-btn mt-3">Edit</button>
      </form>
      <br>
    </div>
  </div>


