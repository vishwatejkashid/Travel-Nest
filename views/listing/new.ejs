<% layout("/layouts/boilerplate") -%>

<div class="row">
    <div class="col-8 offset-2">
        <br>
      <h2>Add New Place</h2>
      <form method="post" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label" >Title</label>
          <input
            placeholder="Enter Title"
            name="list[title]"
            type="text"
            class="form-control"
            required  
          />
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Title cannot be empty</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            placeholder="Enter Description"
            name="list[description]"
            class="form-control"
            required
              
          ></textarea>
          <div class="valid-feedback">Valid Description</div>
          <div class="invalid-feedback">Description cannot be empty</div>
        </div>
        <div class="mb-3">
          <label for="img" class="form-label">Upload Image</label>
          <input
            placeholder="Enter Image URL/Link"
            name="list[img]"
            type="file"
            class="form-control"  
            required          
            />
            <div class="valid-feedback">Valid image url</div>
          <div class="invalid-feedback">Image url cannot be empty</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input
                  placeholder="Enter Price"
                  name="list[price]"
                  type="text"
                  class="form-control"
                  required
                />
                <div class="valid-feedback">Valid Price</div>
                <div class="invalid-feedback">Price cannot be empty</div>
              </div>
              <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input
                  placeholder="Enter Location"
                  name="list[location]"
                  type="text"
                  class="form-control"
                   required 
                />
                <div class="valid-feedback">Valid Location</div>
                <div class="invalid-feedback">Location cannot be empty</div>
              </div>
        </div>
       
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            placeholder="Enter Country"
            name="list[country]"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Valid Country</div>
          <div class="invalid-feedback">Country cannot be empty</div>
          <div class="col-md-4">
            <label for="type" class="form-label">Type</label>
            <select name="list[type]" class="form-control" required>
                <option value="">Select a type</option>
                <option value="AmazingPools">Amazing Pools</option>
                <option value="Arctic">Arctic</option>
                <option value="Hillstations">Hillstations</option>
                <option value="Mansion">Mansion</option>
                <option value="Islands">Islands</option>
                <option value="Worship">Worship</option>
                <option value="Forts">Forts</option>
                <option value="Beachfront">Beachfront</option>
                <option value="Farms">Farms</option>
                <option value="Rooms">Rooms</option>
            </select>
            <div class="invalid-feedback">required</div>
        </div>
        </div>
        <button class="btn btn-dark add-btn mt-3">ADD</button>
      </form>
      <br>
    </div>
</div>

